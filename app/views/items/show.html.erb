<h1><%= @item.title %> <span class="badge"><%= number_to_currency @item.price %></span></h1>
<% if @item.category %>
<p><strong>Category: </strong><%= @item.category.title %></p>

<% end %>


<p><%= image_tag @item.photo, class: 'thumbnail', height:'200' if @item.photo.present? %></p>

<p><%= @item.description %></p>
<% if(session[:request_controller]!="orders" && session[:request_controller]!="cart") %>
<p><%= link_to 'Add to Cart', add_item_cart_path(@item), class: 'btn btn-primary' %></p>
<%end%>
<%if is_admin?%>
<%= link_to 'Edit', edit_item_path(@item) if is_admin? %> |
<%end%>
<% if(session[:request_controller]=="orders") %>
<%= link_to 'Back', order_path(session[:request_id]) %>
<%else%>
<%= link_to 'Back', menus_path %> 
<%end%>



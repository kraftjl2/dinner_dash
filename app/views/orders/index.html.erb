<% if is_admin? %>
<h1>There are currently <%=Order.count %> order(s) to be processed.</h1>
<%else%>
<h1>You have <%=@orders.count %> placed order(s).</h1>
<%end%>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Status</th>
      <th>Pickup Time</th>
    <% if is_admin? %>
      <th>User</th>
      <th>Actions</th>
    <% end %>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at, order_path(order) %></td>
        <td><%= order.order_status %></td>
        <td><%= order.pickup_at %></td>
        <% if is_admin? %>
        <td><%= order.user.name %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %> | <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

